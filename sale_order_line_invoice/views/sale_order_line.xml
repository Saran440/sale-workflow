<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="sale_order_line_view_tree" model="ir.ui.view">
        <field name="model">sale.order.line</field>
        <field name="arch" type="xml">
            <tree string="Sale order lines" editable="top" delete="true" create="false" edit="true">
                <field name="order_partner_id" readonly="1"/>
                <field name="order_id" readonly="1"/>
                <field name="product_id" readonly="1"/>
                <field name="product_uom_qty"/>
                <field name="qty_to_invoice"/>
                <field name="invoice_status"/>
                <field name="invoice_lines"/>
            </tree>
        </field>
    </record>

    <record model="ir.actions.server" id="create_invoice_from_so_lines">
        <field name="name">Invoice lines</field>
        <field name="model_id" ref="sale.model_sale_order_line"/>
        <field name="binding_model_id" ref="sale.model_sale_order_line"/>
        <field name="state">code</field>
        <field name="code">
action = records.action_invoice_create()
        </field>
    </record>

    <record id="sale_order_line_to_invoice_tree_action" model="ir.actions.act_window">
        <field name="name">Sale order lines to invoice</field>
        <field name="res_model">sale.order.line</field>
        <field name="view_mode">tree</field>
        <field name="view_id" ref="sale_order_line_invoice.sale_order_line_view_tree"/>
        <field name="context">{"search_default_to_invoice": 1}</field>
    </record>

    <menuitem
        action="sale_order_line_to_invoice_tree_action"
        id="menu_sale_order_line_to_invoice"
        parent="sale.menu_sale_invoicing" sequence="30"/>

</odoo>
