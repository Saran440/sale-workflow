<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="view_sale_line_form" model="ir.ui.view">
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='order_line']" position="attributes">
                <attribute name="context">{'default_pricelist_id': pricelist_id}</attribute>
            </xpath>
            <xpath expr="//field[@name='order_line']/form/group/group/field[@name='price_unit']" position="after">
                <field name="pricelist_id" invisible="True"/>
            </xpath>
            <xpath expr="//field[@name='order_line']/form/label[@for='name']" position="before">
                <div>
                    <field name="bom_with_option" invisible="1"/>
                    <label for="option_ids" attrs="{'invisible': [('bom_with_option', '=', False)]}"/>
                    <field name="option_ids" context="{'line_product_id': product_id}"
                           attrs="{'invisible': [('bom_with_option', '=', False)]}">
                        <tree editable="bottom" decoration-danger="invalid_qty == True">
                            <field name="bom_line_id" invisible="1"/>
                            <field name="product_id"
                                   options="{'no_create': True}"
                                   domain="[('component_of_product_ids', '=', parent.product_id)]"/>
                            <field name="qty" string="Desired qty" />
                            <field name="min_qty"/>
                            <field name="max_qty"/>
                            <field name="product_uom_id" options="{'no_open':True,'no_create':True}" groups="uom.group_uom"/>
                            <field name="line_price_unit"/>
                            <field name="line_price"/>
                            <field name="invalid_qty" invisible="True"/>
                        </tree>
                    </field>
                </div>
            </xpath>
        </field>
    </record>

</odoo>
